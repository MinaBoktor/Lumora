{
  "manifest_version": 3,
  "name": "Lumora",
  "version": "2.0",
  "description": "Illuminate your reading with beautiful, intelligent text highlighting",
  "permissions": ["contextMenus", "scripting", "activeTab", "storage"],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Lumora - Intelligent Text Highlighter",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
